{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=financecore;Username=postgres;Password=postgres;Include Error Detail=true",
    "HangfireConnection": "Host=localhost;Port=5432;Database=financecore;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Hangfire": "Information"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Hangfire": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/financecore-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName"]
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },

  "FinanceCore": {
    "FileIngestion": {
      "InputDirectory": "./data/input",
      "ProcessedDirectory": "./data/processed",
      "ErrorDirectory": "./data/error",
      "SupportedExtensions": [".csv", ".xlsx", ".xls"]
    },
    
    "Reconciliation": {
      "AutoReconcileEnabled": true,
      "MaxDiscrepancyForAutoApproval": 1.00,
      "DaysBeforeEscalation": 3
    },
    
    "ExchangeRates": {
      "Provider": "ExchangeRateApi",
      "ApiKey": "",
      "BaseCurrency": "USD",
      "UpdateIntervalHours": 1
    },
    
    "Processing": {
      "BatchSize": 1000,
      "MaxParallelJobs": 4,
      "TimeoutMinutes": 30
    }
  },

  "AllowedHosts": "*"
}
